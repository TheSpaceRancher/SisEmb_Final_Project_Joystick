#include <18F4550.h>

#fuses HSPLL,NOWDT,NOPROTECT,NOLVP,NODEBUG,USBDIV,PLL5,CPUDIV1,VREGEN, XT
#use delay(clock=48000000)


#include <pic18_usb.h>
#include <joy_control.h>
#include <usb.c>

#define BOTTON PIN_A0
#define LED PIN_A1

void main()
{
   usb_init_cs();

   int8 data[4];
   int16 ADCx;
   int16 mapped_adc = 0; /* valor mapeado 0..255 */

   /* configurar ADC (CCS): resoluci贸n 10 bits indicada por #device adc=10 */
   setup_adc_ports(All_ANALOG);
   setup_adc(ADC_CLOCK_INTERNAL);

   /* RA0 (AN0) como entrada anal贸gica; B como salidas para LEDs/depuraci贸n */
   set_tris_a(0b00000001);

   while(TRUE)
   {
      /* seleccionar AN0 y esperar adquisici贸n antes de leer */
      set_adc_channel(1); /* AN0 */
      delay_us(20);
      ADCx = read_adc(); /* devuelve 0..1023 con #device adc=10 */

      /* Normalizar lectura ADC (0..1023) a rango 0..255 */
      mapped_adc = (ADCx * 255) / 1023; /* entero, 0..255 */
      
      usb_task();

      if(usb_enumerated()){

         data[0] = 0;
         data[1] = (int8)mapped_adc; /* byte normalizado 0..255 */
         data[2] = 0;
         data[3] = 0;

         usb_put_packet(1, data, 4, USB_DTS_TOGGLE);
      }
      delay_ms(50);
   }

}
